{
    "name": "otwsystems/wp-oidc-login",
    "description": "WordPress plugin for SSO via OIDC with optional permission mapping",
    "version": "1.0.0",
    "license": "AGPL-3.0-or-later",
    "type": "wordpress-plugin",
    "keywords": [
        "authentication",
        "authorization",
        "login",
        "auth",
        "oauth",
        "oidc",
        "openid",
        "secure"
    ],
    "autoload": {
        "psr-4": {
            "OTWSystems\\WpOidcLogin\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Brian Austin",
            "email": "brianaustin@transformativeworks.org"
        }
    ],
    "prefer-stable": true,
    "require": {
        "php": "^8.2",
        "jumbojett/openid-connect-php": "^1.0"
    },
    "require-dev": {
        "lkrms/pretty-php": "^0.4.94",
        "vimeo/psalm": "^6.13",
        "szepeviktor/phpstan-wordpress": "^2.0"
    },
    "scripts": {
        "psalm": "@php vendor/bin/psalm",
        "psalm:fix": "@php vendor/bin/psalter --issues=all",
        "style": "@php vendor/bin/pretty-php --check .",
        "style:fix": "@php vendor/bin/pretty-php ."
    }
}
